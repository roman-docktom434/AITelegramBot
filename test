import asyncio
from aiogram import Bot


async def main():
    # Замените на ваш токен
    bot = Bot(token="8545785052:AAHaGJNisF2ig74D_EomT33kxRn7GPlBYUk")

    # Отправка сообщения в канал по его юзернейму или ID
